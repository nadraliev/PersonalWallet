<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/md_grey_400</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="SingleLineText" parent="TextAppearance.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryText" parent="SingleLineText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="PrimaryText.White" parent="PrimaryText">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="SecondaryText" parent="SingleLineText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

</resources>
